{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "GetByIDRequest",
    "type": "object",
    "properties": {
      "sessionID": {
        "type": "string",
        "description": "ID of the session (external id)"
      },
      "workspaceID": {
        "type": "string",
        "description": "ID the workspace (external id)"
      },
      "messages": {
        "type": "array",
        "description": "Messages saved in the session",
        "items": {
          "type": "object",
          "required": ["id", "content", "policies"],
          "properties": {
            "id": {
              "type": "string"
            },
            "content": {
              "type": "string"
            },
            "policies": {
              "type": "array",
              "description": "Policies violated by the message",
              "items": {
                "type": "object",
                "required": ["id", "description", "name"],
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        }
      },
      "limit": {
        "type": "integer",
        "description": "Maximum amount of messages to receive"
      },
      "skip": {
        "type": "integer",
        "description": "Messages to skip for pagination"
      }
    },
    "required": ["sessionID", "workspaceID"],
    "additionalProperties": false
  }
